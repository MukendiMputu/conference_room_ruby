<% @page_title = 'Signup'%>
            <div id="section">
                <div id="main_pane">
                <div id="mp_titel" class="text-center"><h3>CREATE YOUR ACCOUNT</h3></div>
                <div id="swiper" class="">
                <%= form_with(:model => @user, :url => users_path, :method => 'post', :class => 'form-validate', :multipart => true) do %>
                    <div id="avatar_div" class="text-center">
                        <%= image_tag("100/avatar_default.png", :class =>"img_widget", :alt => "avatar default picture")%><br/>
                        <%= label_tag(:picture, "Upload a profile picture: ") %>
                        <%= file_field_tag(:picture) %>
                    </div>
                    <div class="invisible modal-danger">
                        <%= flash[:alert] %>
                    </div>
                    <div class="labeledInput">
                        <%= label_tag(:first_name, "First Name:") %><span class="label_required danger">&nbsp;*</span>
                        <%= text_field_tag(:first_name) %>
                    </div>
                    <div class="labeledInput">
                        <%= label_tag(:last_name, "Last Name:") %><span class="label_required danger">&nbsp;*</span>
                        <%= text_field_tag(:last_name) %>
                    </div>
                    <div class="labeledInput">
                        <%= label_tag(:nickname, "Nickname:") %><span class="label_required danger">&nbsp;*</span>
                        <%= text_field_tag(:nickname) %>
                    </div>
                    <div class="labeledInput">
                        <%= label_tag(:email, "Email Address:") %><span class="label_required danger">&nbsp;*</span>
                        <%= text_field_tag(:email) %>
                    </div>
                    <div class="labeledInput">
                        <%= label_tag(:password, "Password:") %><span class="label_required danger">&nbsp;*</span>
                        <%= password_field_tag(:password) %>
                    </div>
                    <div class="labeledInput">
                        <%= label_tag(:confirm_pwd, "Confirm your password:") %><span class="label_required danger">&nbsp;*</span>
                        <%= password_field_tag(:confirm_pwd) %>
                    </div>
                    <span style="font-size: 8pt;color: #838383;">Field marked with <span class="label_required danger">&nbsp;*</span> are required</span>
                    <div class="text-center">
                        <br/>
                        <%= submit_tag('Sign up') %><hr />
                        <p class="">or <%= link_to("Sign in", login_index_path) %></p>
                    </div>
                    <br/>
                    <br/>
                <% end %>
                </div><!-- end of event pane -->
            </div> <!-- end of section -->